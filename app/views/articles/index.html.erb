<h1>Listing articles</h1>
<br>
<%= link_to 'New article', new_article_path %>
<br><br>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Time</th>

  </tr>

  <% @articles.each do |article| %>
    <tr>
           <td><%= article.title %></td>
           <td><%= article.text %></td>

           <td><%= link_to 'Show', article_path(article) %></td>
           <td><%= link_to 'Edit', edit_article_path(article) %></td>
           <td><%= link_to 'Deletele', article_path(article),
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %></td>
                   <td><%= time_ago_in_words article.created_at %><td> ago
     </tr>
  <% end %>
</table>
